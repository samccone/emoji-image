@import "_reset"

*
  box-sizing: border-box

body
  background: #212121
  font-family: 'Open Sans', sans-serif;

.left
  float: left

.cl
  clear: both

#app
  width: 95%
  max-width: 1200px
  margin: 20px auto
  border: solid 3px #333333
  border-radius: 5px
  overflow: hidden

  +above(1024px)
    top: 50%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
    position: absolute;

  +below(1024px)
    width: 100%
    margin-top: 0

.art
  width: 100%
  padding: 30px

canvas
  background: #111111

.headline
  color: #939393
  background: #111
  text-transform: uppercase
  font-size: 13px

.secondary
  width: 30%
  background: #333333
  height: 100%
  position: absolute
  left: 70%
  top: 0

  .headline
    background: transparent
    color: #898989

.main-pane
  width: 70%

  canvas
    width: 100%

  +below(1024px)
    position: absolute
    left: 0
    height: 100%

.pipeline
  padding: 0 10px
  border-top: solid 2px #212121;
  border-bottom: solid 2px #212121;
  margin-top: 32px;

  > ul
    padding: 13px

  .headline
    margin-left: 10px
    margin-top: 13px

.picker
  height: 120px
  position: relative
  background: #111111
  overflow: hidden

  ul
    display: block
    height: 100%
    width: 100%

  li
    height: 69px
    width: 25%
    float: left
    background-size: cover
    background-position: center center
    position: relative
    opacity: 0.4
    cursor: pointer
    border: solid 3px #212121

    &.active
      opacity: 1
      border: solid 3px #6ac8ff

    &:hover
      opacity: 0.85

label
  color: #FFF
  display: block
  margin: 10px 0
  font-size: 14px
.image
  input
    cursor: pointer
    position: absolute
    height: 100%
    width: 100%
    opacity: 0
    top: 0
    left: 0

.section
  margin: 19px 0
  padding: 0 19px

.btn-group
  text-align: center
  position: relative
  top: 8px

  .btn
    width: 47%;
    display: inline-block;
    margin-right: 3%;

.btn
  color: #FFF
  font-size: 15px
  padding: 10px 20px
  text-align: center
  border-radius: 4px
  position: relative
  cursor: pointer

  &.image
    background: #3c8aff

  &.video
    background: #ff5c3c

  &.download
    background: #555555

#footer
  position: absolute
  bottom: 0
  width: 100%
  text-align: center
  background: #333
  color: #B8B8B8
  padding: 10px
  font-size: 15px

  a
    color: #3c8aff
