@import "_reset"

*
  box-sizing: border-box

body
  background: #212121
  font-family: 'Open Sans', sans-serif;

.left
  float: left

.cl
  clear: both

#app
  width: 95%
  max-width: 1200px
  margin: 20px auto
  border: solid 1px #333333
  border-radius: 3px
  top: 50%;
  left: 50%;
  transform: translateY(-50%) translateX(-50%);
  position: absolute;


.art
  width: 100%

canvas
  background: #111111

.picker-headline
  color: #939393
  background: #111
  text-transform: uppercase
  font-size: 14px
  padding: 13px

.secondary
  width: 30%
  background: #333333
  height: 100%
  position: absolute
  left: 70%
  top: 0

.main-pane
  width: 70%

  canvas
    width: 100%

.pipeline
  padding: 0 10px

.picker
  height: 100px
  position: relative
  ul
    display: block
    height: 100%
    width: 100%

  li
    top: 5%
    height: 90%
    width: 25%
    float: left
    background-size: cover
    background-position: center center
    position: relative
    opacity: 0.5
    cursor: pointer
    border: solid 4px #212121

    &.active
      opacity: 1

    &:hover
      opacity: 0.85

label
  color: #FFF
  display: block
  margin: 10px 0

.picker
  li.image, li.video
    cursor: pointer
    background-color: #FFF
    background-image: url("/images/image_upload.png")
    background-size: 30%;
    background-repeat: no-repeat;
    background-position: center center;

  li.video
    background-image: url("/images/video.png")

  input
    cursor: pointer
    position: relative
    height: 100%
    width: 100%
    opacity: 0
