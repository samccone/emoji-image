@import "_reset"

*
  box-sizing: border-box

body
  background: #212121
  font-family: 'Open Sans', sans-serif;

.left
  float: left

.cl
  clear: both

#app
  width: 95%
  max-width: 1200px
  margin: 20px auto
  border: solid 3px #333333
  border-radius: 5px
  overflow: hidden
  top: 50%;
  left: 50%;
  transform: translateY(-50%) translateX(-50%);
  position: absolute;


.art
  width: 100%
  padding: 30px

canvas
  background: #111111

.headline
  color: #939393
  background: #111
  text-transform: uppercase
  font-size: 13px
  padding: 19px

.secondary
  width: 30%
  background: #333333
  height: 100%
  position: absolute
  left: 70%
  top: 0

  .headline
    background: transparent
    color: #898989

.main-pane
  width: 70%

  canvas
    width: 100%

.pipeline
  padding: 0 10px

.picker
  height: 120px
  position: relative
  background: #111111
  overflow: hidden

  ul
    display: block
    height: 100%
    width: 100%

  li
    height: 100%
    width: 25%
    float: left
    background-size: cover
    background-position: center center
    position: relative
    opacity: 0.4
    cursor: pointer
    border-left: solid 4px #212121

    &.active
      opacity: 1

    &:hover
      opacity: 0.85

label
  color: #FFF
  display: block
  margin: 10px 0

.image
  input
    cursor: pointer
    position: absolute
    height: 100%
    width: 100%
    opacity: 0
    top: 0
    left: 0

.btn
  color: #FFF
  font-size: 15px
  padding: 10px 20px
  text-align: center
  border-radius: 4px
  position: relative
  cursor: pointer

  &.image
    background: #3c8aff

  &.video
    background: #ff5c3c

  &.download
    background: #555555
